<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_path_desc"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getExternalStorageDirectory()"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/editTextStoragePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <requestFocus >
            </requestFocus>
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lastStoragePath"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/editTextLastStoragePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getReadableDatabase().getPath()"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/editTextDBPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getDataDirectory().getPath()"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/editTextDataDirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getPackageName()"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/editTextAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="editTextDBSDPath" >
        </TextView>

        <EditText
            android:id="@+id/editTextDBSDPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_backup_path"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editTextPathBackupRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_path_dot" android:onClick="dirChooser" android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_backup_start" android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_restore_start" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>