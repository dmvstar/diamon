<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
        <TextView android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/user_profile"></TextView>
        <Spinner android:layout_weight="1" style="@style/SpinnerAsEditText" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/spinnerProfileList"></Spinner>
        <LinearLayout android:id="@+id/LinearLayout01" android:layout_weight="1" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:text="@string/button_profile_add" android:drawableLeft="@drawable/data_add" android:onClick="addProfileAction" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/Button03"></Button>
            <Button android:text="@string/button_profile_save" android:drawableLeft="@drawable/document_save" android:onClick="saveProfileAction" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/Button02"></Button>
            <Button android:text="@string/button_profile_del" android:drawableLeft="@drawable/data_remove" android:onClick="delProfileAction" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/Button01"></Button>
        </LinearLayout>
        <TextView android:text="@string/user_id" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView1"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextUserId">
            <requestFocus></requestFocus>
        </EditText>
        <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView2" android:text="@string/user_name"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextUserName"></EditText>
        <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView3" android:text="@string/user_sex"></TextView>
        <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/spinnerSex"></Spinner>
        <TextView android:text="@string/user_age" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView4"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextUserAge"></EditText>
        <TextView android:text="@string/user_height" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView5"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextUserHeight"></EditText>
        <TextView android:text="@string/user_weight" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView6"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextUserWeight"></EditText>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/user_image"></TextView>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/preferences_desktop_user" android:id="@+id/imageButtonUserPicture"></ImageButton>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1">
            <Button android:layout_weight="1" android:id="@+id/buttonCreateProfile" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/button_profile_add" android:drawableLeft="@drawable/data_add" android:onClick="addProfileAction"></Button>
            <Button android:layout_weight="1" android:id="@+id/buttonSaveProfile" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/button_profile_save" android:drawableLeft="@drawable/document_save" android:onClick="saveProfileAction"></Button>
            <Button android:layout_weight="1" android:id="@+id/buttonDeleteProfile" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/button_profile_del" android:drawableLeft="@drawable/data_remove" android:onClick="delProfileAction"></Button>
        </LinearLayout>
    </LinearLayout>
    
</ScrollView>
